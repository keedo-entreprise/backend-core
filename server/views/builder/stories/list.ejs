<%- layout('./../../layout') %>

<div class="fh5co-loader"></div>

<div id="page">
    <div id="fh5co-portfolio">
        <div class="container">
            <div class="row animate-box">
                <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                    <h2><%= __('Stories') %></h2>
                </div>
            </div>
            <div class="row">
                <% _.each(list, function(story){ %>
                <div class="col-md-4">
                    <div class="fh5co-portfolio animate-box">
                        <a href="/builder/stories/<%= story.id %>">
                            <div class="portfolio-entry"
                                 style="background-image: url('<%= story.thumbnail %>');"></div>
                            <div class="portfolio-text">
                                <h3><%= story.title %></h3>
                                <ul class="stuff">
                                    <li><i class="icon-heart2"></i><%= story.likesCount %></li>
                                    <li><i class="icon-eye2"></i><%= story.viewsCount %></li>
                                    <li><i class="icon-download3"></i><%= story.ordersCount %></li>
                                </ul>
                            </div>
                        </a>
                    </div>
                </div>
                <% }); %>
                <div class="col-md-4">
                    <div class="fh5co-portfolio animate-box">
                        <a href="/builder/stories/new">
                            <div class="portfolio-text">
                                <h3><%= __('Create new Story') %></h3>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="gototop js-top">
    <a href="#" class="js-gotop"><i class="icon-arrow-up22"></i></a>
</div>
